<!DOCTYPE html>
<html lang="en">
{{>head }}

<body>
    <div id="secret">
        <form id="code-form">
            <caption>Enter Code</caption>
            <input type="text" maxlength="4" oninput="this.value=this.value.replace(/[^0-9]/g,'');" id="code"
                autocomplete="off" />
            <div id="error" class="hide"><span class="error-msg"></span></div>
        </form>
    </div>
    <div class="chat-container blur">
        <header id="users-list">
            <span>Users online</span>
            <ul id="users">
            </ul>   
        </header>
        <section id="current-date">
            {{date}}
        </section>
        <ul id="message-list">
        </ul>
        <form id="message-form">
            <input type="text" id="message-input" autocomplete="off" disabled="disabled">
        </form>
    </div>

</body>

</html>